<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD428">

    <!-- Title -->
    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/llFilterButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHistoryTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:text="All"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSlot1"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:text="Slot 1"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnSlot2"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:text="Slot 2"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnSlot3"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:text="Slot 3"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llFilterButtons"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />
        </LinearLayout>

        <!-- Analytics -->
        <LinearLayout
            android:id="@+id/navAnalytics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/history_icon"
                android:contentDescription="Analytics" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif_icon"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/settings_icon"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
