<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD100"
    tools:context=".notification.NotificationActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp" />

    <!-- Filter Buttons Row -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationTitle"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:minWidth="60dp"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/btnUnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unread"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFEB3B"
            android:layout_marginStart="8dp"
            android:minWidth="80dp"
            android:paddingHorizontal="10dp"/>

        <TextView
            android:id="@+id/markAllRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark All As Read"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- Scrollable List of Notifications -->
    <ScrollView
        android:id="@+id/scrollNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_below="@id/filterContainer"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/notificationList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp" />
    </ScrollView>

    <!-- ðŸŒŸ Custom Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/history_icon"
                android:contentDescription="History" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif_icon"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/settings_icon"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
